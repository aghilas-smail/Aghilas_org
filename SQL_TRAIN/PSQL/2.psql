-- select 
select * from demo;
select * from demo1;

-- CTE

with greater_than_two as (
    select *
    from demo
    where id > 2)
select * from greater_than_two

-- Create VIEW
create view greater_than_two3 as
    select * from demo
    where id > 2;

-- select from the view
select * from greater_than_two3;

-- Inner join beetwen the view and the table.

select * from greater_than_two3 g
inner join demo1 d
    on g.id = d.id;
